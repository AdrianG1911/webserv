#pragma once

#include <ftev/Protocol/ReadProtocol.hpp>
#include <ftev/Protocol/WriteProtocol.hpp>
#include <ftev/Stream/StreamTransport.hpp>

namespace ftev {

class StreamProtocol : public ReadProtocol, public WriteProtocol {
protected:
  StreamTransport _transport;

  StreamProtocol(EventLoop &loop, ftpp::Socket &socket)
      : _transport(loop, socket) {
    _transport.setProtocol(*this);
    _transport.resume();
  };

public:
  virtual ~StreamProtocol();
};

} // namespace ftev
