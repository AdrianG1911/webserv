servers:
  - server_names: [localhost]
    listen:
      - { port: 8080 }
    locations:
      - path: /
        type: default
        autoindex: true
        root: /
        cgi:
          - { ext: .bla, bin: @@@ROOT@@@/cgi_tester }
      - path: /put_test/
        type: upload
        allow_methods: [PUT]
        redirect: /
        store: @@@ROOT@@@/uploads
      - path: /post_body
        type: default
        allow_methods: [POST]
        root: @@@ROOT@@@/post_body_root
        client_max_body_size: 100
        cgi:
          - { ext: .bla, bin: @@@ROOT@@@/cgi_tester }
      - path: /directory
        type: default
        root: @@@ROOT@@@/YoupiBanane
        index: [youpi.bad_extension]
        cgi:
          - { ext: .bla, bin: @@@ROOT@@@/cgi_tester }
