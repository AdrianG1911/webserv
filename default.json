{
  "servers": [
    {
      "server_names": [
        "server0",
        "server1"
      ],
      "listen": [
        8082,
        "localhost:8080"
      ],
      "client_max_body_size": "1m",
      "error_page": {
        "404": "/404.html",
        "500": "/50x.html",
        "502": "/50x.html",
        "503": "/50x.html",
        "504": "/50x.html"
      },
      "location": {
        "/": {
          "type": "static",
          "allow_methods": [
            "GET",
            "POST"
          ],
          "root": "/usr/share/nginx/html",
          "autoindex": true,
          "index": "index.html"
        },
        "/redirect": {
          "type": "redirect",
          "allow_methods": [
            "GET"
          ],
          "code": 301,
          "path": "http://www.google.com/"
        },
        "/cgi": {
          "type": "cgi",
          "allow_methods": [
            "GET",
            "POST"
          ],
          "cgi_path": "/usr/lib/cgi-bin",
          "cgi_ext": ".cgi"
        },
        "/storage": {
          "type": "storage",
          "upload_path": "/usr/share/nginx/upload"
        }
      }
    },
    {
      "server_name": [
        "server2"
      ],
      "listen": [
        "localhost:8081"
      ]
    }
  ]
}